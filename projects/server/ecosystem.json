{
  "apps": [
    {
      "name": "server",
      "script": "index.js",
      "watch": ["src/**/*", "/db/migrations/**/*", "/code/common/**/*"],
      "env_development": {
        "NODE_ENV": "development",
        "ADDRESS": "server",
        "PORT": "4100",
        "BASE_URL": "https://localhost:4000",
        "CLIENT_URL": "https://localhost:3000",
        "SQLITE_DATABASE": "/db/database.db",
        "DB_MIGRATIONS_PATH": "/db/migrations"
      },
      "env_production": {
        "NODE_ENV": "production",
        "ADDRESS": "127.0.0.1",
        "PORT": "4100",
        "BASE_URL": "https://api.midishare.app",
        "CLIENT_URL": "https://midishare.app",
        "SQLITE_DATABASE": "/home/node/db/database.db",
        "DB_MIGRATIONS_PATH": "/home/node/db/migrations"
      }
    }
  ],
  "deploy": {
    "production": {
      "user": "node",
      "host": ["64.227.101.60"],
      "ssh_options": ["StrictHostKeyChecking=no"],
      "key": "",

      "ref": "origin/rewrite",
      "repo": "git@github.com:corytheboyd/midishare.git",
      "path": "/home/node/midishare",

      "pre-setup": "echo 'PRE-SETUP' ; ls -al",
      "post-setup": "echo 'POST-SETUP' ; ls -al",
      "pre-deploy-local": "echo 'PRE-DEPLOY-LOCAL'",
      "post-deploy": "pm2 startOrRestart projects/server/ecosystem.json --env production"
    }
  }
}
