#!/bin/bash

set -euo pipefail

echo Install dependencies for projects/client...
(cd projects/client && npm ci)

echo Install dependencies for projects/common...
(cd projects/common && npm ci)

echo Install dependencies for projects/docs...
(cd projects/docs && npm ci)

echo Install dependencies for projects/inspector...
(cd projects/inspector && npm ci)

echo Install dependencies for projects/keyboard...
(cd projects/keyboard && npm ci)

echo Install dependencies for projects/server-app...
(cd projects/server-app && npm ci)

echo Creating Docker images...
bin/dcp-dev build

echo Creating NPM links...
bin/link
